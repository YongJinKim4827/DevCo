<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cyberi.devcommunity.impl.UserRepository">
    <resultMap id="userResultMap" type="UserItem">
        <result property="userId"   column="USER_ID" />
        <result property="password" column="PASSWORD" />
        <result property="userName" column="USER_NAME" />
        <result property="email"    column="EMAIL" />
        <result property="gender"   column="GENDER" />
    </resultMap>

    <select id="selectUserItem" resultMap="userResultMap">
        SELECT
          USER_ID, PASSWORD, USER_NAME, EMAIL, GENDER
        FROM
          USER_INFO
        WHERE 1=1
    </select>

    <insert id="registryUser">
        INSERT INTO USER_INFO
        (
          USER_ID,
          PASSWORD,
          USER_NAME,
          BIRTH,
          GENDER
          EMAIL
        ) VALUES (
          #{userId},
          #{password},
          #{userName},
          #{birth},
          #{gender},
          #{email}
        )

    </insert>

    <update id="updateUser">
        UPDATE USER_INFO SET
          <if test="password != '' and password != null">
              PASSWORD = #{password}
          </if>
          USER_NAME = #{userName}
          EMAIL = #{email}
          GENDER = #{gender}
          BIRTH = #{birth}
        WHERE 1=1
        AND USER_ID = #{userId}
    </update>

    <delete id="deleteUser">
        DELETE FROM USER_INFO
        WHERE userId = #{userId}
    </delete>
</mapper>
